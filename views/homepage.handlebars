{{#each blogPosts as |blogPost| }}
<div class = "row mb-4 blogPost">
    <div class = "col-md-5">
        <h2>
            <a href="/blogPost/{{blogPost.id}}"> {{blogPost.title}}</a>
        </h2>

        <p>Posted by {{blogPost.user.name}} on {{format_date blogPost.date_created}}</p>

        <div class="col-md-7">
            <p>
                {{blogPost.description}}
            </p>
        </div>
    </div>
</div>
{{/each}}